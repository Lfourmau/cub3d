typedef struct s_vector2
{
	float	x;
	float	y;
}	t_vector2;

typedef struct s_map
{
	char		**map;
	t_vector2	spawn;
	t_textures	textures;
}	t_map;

typedef struct s_player
{
	t_vector2	location;
	float		look_angle;
}	t_player;

typedef struct s_minimap
{
	t_vector2	position;
	int			width;
	int			height;
}	t_minimap;

typedef struct s_infos
{
	int	width;
	int	height;
}	t_infos;

typedef struct s_window
{
	void	*mlx_ptr;
	void	*mlx_img;
	void	*win_ptr;
	void	*img_ptr;
	int		bits_per_pixel;
	int		line_length;
	int		endian;
	int 	flush;
}	t_window;

typedef struct s_inputs
{
	int		w;
	int		a;
	int		s;
	int		d;
	int		left;
	int		right;
	int		esc;
}	t_inputs;

typedef struct s_ray
{
	t_vector2	direction;
	t_vector2	current;
	float		raydist;
	int 		side;
	int			color;
}	t_ray;

typedef struct s_texture
{
	void 	*img;
	int		*buff;
	int		width;
	int		height;
	int		bits_per_pixel;
	int 	line_length;
	int		endian;
}	t_texture;

typedef struct s_textures
{
	t_texture	*n;
	t_texture	*s;
	t_texture	*e;
	t_texture	*w;
	t_texture	*sprite;
	int			*floor;
	int			*ceil;
}	t_textures;

typedef struct s_sprite
{
	t_vector2	location;
	float		distance;
}	t_sprite;

typedef struct big_struct
{
	t_map		map;
	t_window	window;
	t_inputs	inputs;
	t_infos		*infos;
}	big_struct;
